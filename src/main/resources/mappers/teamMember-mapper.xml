<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fivet.buddy.mapper.TeamMemberMapper">

    <!-- 초대코드 입력 시 팀 입장 -->
    <insert id="enterTeam">
        insert into
            team_member
        values
            (#{teamSeq}, #{memberSeq}, #{teamMemberNickname}, 'coworker', sysdate)
    </insert>

    <!--    팀 생성자가 팀 생성시, 팀 멤버 목록에 추가 -->
    <insert id="createTeam">
        insert into
            team_member
        values
            (#{teamSeq}, #{memberSeq}, #{teamMemberNickname}, 'manager', sysdate)
    </insert>

    <select id="searchByMember" resultType="com.fivet.buddy.dto.TeamDTO">
        select
            team_seq
        from
            team_member
        where
            member_seq = #{value}
    </select>

</mapper>